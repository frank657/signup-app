/* RESET SYSTEM STYLE */
button::after {
  border: none;
}

button {
  background-color: unset;
}

button:hover {
  opacity: 0.8;
}

/* To be used when button is not button element e.g. navigator */
.button {
  padding-left:14px;
  padding-right:14px;
  line-height:2.5;
}

/* OVERWIRTES SYSTEM DEFAULT */
button cover-view {
  display: flex;
}

.btn {
  text-align:center;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius:5rpx;
}

.btn-sm {
  text-align:center;
  /* padding:5px; */
  border-radius:5px;
}

.btn-transparent {
  background-color:white;
  color:#F08302;
  font-weight:bold;
}

.btn-orange {
  background-color:#F08302;
  color:white;
  font-weight:bold;
}

.btn-red {
  background-color:#FFEFEF;
  color:#F98A8B;
}

.btn-ghost-orange {
  border: solid 1px #F08302;
  color:#F08302;
  font-weight:bold;
}


/* FLOATING BUTTON */
.btn-float {
  position:fixed;
  right:20px;
  bottom:200rpx;
  opacity:0.7;
}

.create-lost {
  position:fixed;
  right:20px;
  bottom:220px;
}

.create-found {
  position:fixed;
  right:20px;
  bottom:160px;
}

.kill-hover:hover {
  background: none !important;
  color: none !important;
}

.kill-hover:active {
  background: none !important;
  color: none !important;
  filter: drop-shadow(0 1px 5px #24344F)
}