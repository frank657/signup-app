.blur {
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background-color: rgb(235, 235, 235);
  filter:blur(3px);
}

.overlay {
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index: 2;
  background-color: rgba(255,255,255,0.95);
  transition: 0.3;
  display: flex;
  justify-content: center;
  align-items: center;
}